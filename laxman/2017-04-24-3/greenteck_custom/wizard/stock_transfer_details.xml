<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
<record model="ir.ui.view" id="view_stock_enter_transfer_details_inherit">

<field name="name">Enter transfer details</field>

<field name="model">stock.transfer_details</field>

<field name="type">form</field>

<field name="inherit_id" ref="stock.view_stock_enter_transfer_details" />

<field name="arch" type="xml">
 	<xpath expr="//field[@name='item_ids']" position="replace">
 		<field name="item_ids"
                            context="{'default_sourceloc_id':picking_source_location_id,
                                      'default_destinationloc_id':picking_destination_location_id}" nolabel="1" >
                            <tree string="Inventory Details" editable="bottom" >
                                <field name="package_id" groups="stock.group_tracking_lot" readonly="1"/>
                                <field name="product_id" required="True" readonly="1" context="{'uom':product_uom_id}" on_change="product_id_change(product_id,product_uom_id,context)"/>
                                <field name="quantity" readonly="1"/>
                                <button name="split_quantities" string="Split" readonly="1" type="object" icon="STOCK_PREFERENCES" attrs="{'invisible': [('quantity', '=', 1)]}"/>
                                <field name="product_uom_id" options="{&quot;no_open&quot;: True}" groups="product.group_uom" readonly="1"/>
                                <field name="sourceloc_id" domain="[('id', 'child_of', parent.picking_source_location_id)]" readonly="1"/>
                                <field name="destinationloc_id" domain="[('id', 'child_of', parent.picking_destination_location_id)]" readonly="1"/>
                                <field name="result_package_id" groups="stock.group_tracking_lot" context="{'location_id': destinationloc_id}" readonly="1"/>
                                <button name="put_in_pack" string="Pack" type="object" icon="terp-product" attrs="{'invisible': [('result_package_id', '!=', False)]}" groups="stock.group_tracking_lot" readonly="1"/>
                                <field name="lot_id" groups="stock.group_production_lot" domain="[('product_id','=?', product_id)]" context="{'product_id': product_id}" options="{'no_create_edit':True,'no_edit':True}"/>
                            </tree>
                        </field>
 	</xpath>
 	

</field>

</record>
    </data>
</openerp>    
